<div class="form">
  <%= form_for @lecture do |f| %>
    <h3 style="padding-left: 15px">教室を登録する</h3>
    <div style="margin: 8px 0">
      <%= f.text_field :name, placeholder: '教室名', value: '' %>
    </div>
    <div style="margin: 8px 0">
      <%= f.text_field :season, placeholder: '時期', value: '' %>
    </div>
    <div style="margin: 8px 0">
      <%= f.text_area :description, placeholder: '教室の説明', style: 'width: 90%;height: 300px;' %>
    </div>
    <div class="row">
      <div class="col10 push1">
        <%= button_tag type: "submit", class: "btn btn--block" do %>
                  投稿する<i class="icon-arrow-right"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>