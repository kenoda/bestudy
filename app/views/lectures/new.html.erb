<div class="contents row">
    <%= form_tag('/lectures', method: :post) do %>
      <h3>
        授業の名前をつける
      </h3>
      <input placeholder="クラス名" type="string" name="name">
      <input placeholder="期間" type="string" name="season">
      <textarea cols="30" name="description" placeholder="クラスの説明" rows="10"></textarea>
      <input type="submit" value="SENT">
    <% end %>
</div>